          </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
          <!-- small box -->
          <div class="small-box bg-green">
            <div class="inner">
              <h3><%= counts[0].currentlyAdmitted%></h3>

              <p>Currently Admitted</p>
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
