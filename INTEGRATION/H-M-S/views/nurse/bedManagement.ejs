    <section class="content">

       <div class="row">
        <div class="col-xs-12">
          <!-- /.box -->

          <div class="box">
            <div class="box-header">
              <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i> New Bed Allocation</button>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="bed" class="table table-bordered table-striped">
                <tr>
                  <th>Bed Number</th>
                  <th>Patient Type</th>
                  <th>Patient Name</th>
                  <th>Status</th>
                  <th>Confinement Date</th>
                  <th>Actions</th>
                </tr>

                <%for(var i=0; i < bedDetails.length; i++){%>
                <tralign="center">
                  <td><%= bedDetails[i].bed_id%></td>
                  <td><%= bedDetails[i].patient_type%></td>
                  <td><%= bedDetails[i].name%></td>
                  <td><%= bedDetails[i].status%></td>
                  <%
                  var DT = moment(bedDetails[i].allotment_timestamp).format('YYYY-MM-DD HH:mm:ss');
                  console.log(DT);
                  if(DT == 'Invalid date'){%>
                    <td></td>
                  <%} else {%>
                    <td><%= DT%></td>
                  <%}%>
                  <form method="POST">
                    <td><button onclick="discharge(<%= bedDetails[i].bed_id%>)">discharge</button></td>
                    <input type="text" id="dis" name="bed" style="display:none;" >
                  </form>
                </tr>
                <%}%>
              </table>
            </section>

