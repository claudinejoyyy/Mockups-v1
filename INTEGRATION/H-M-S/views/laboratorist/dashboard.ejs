<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dashboard</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="../bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="../dist/css/skins/_all-skins.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="../plugins/iCheck/flat/blue.css">
    <!-- Morris chart -->
    <link rel="stylesheet" href="../plugins/morris/morris.css">
    <!-- bootstrap wysihtml5 - text editor -->
    <link rel="stylesheet" href="../plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="../plugins/select2/select2.min.css">
  </head>
  <body>
    <div class="wrapper">
      <header class="main-header">
        <a href="../laboratorist/dashboard" class="logo">
          <span class="logo-mini"><b>P</b></span>
          <span class="logo-lg"><b>Laboratorist</b></span>
        </a>
        <nav class="navbar navbar-static-top" role="navigation">
          <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
          </a>

          <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
              <li class="dropdown user user-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <img src="../dist/img/sample prof pic.png" class="user-image" alt="User Image">
                  <span class="hidden-xs"><%=pInfo[0].name%></span>
                </a>
                <ul class="dropdown-menu">
                  <li class="user-header">
                    <img src="../dist/img/sample prof pic.png" class="img-circle" alt="User Image">
                    <p>
                      <%=pInfo[0].name%> - Laboratorist
                      <small></small>
                    </p>
                  </li>
                  <li class="user-footer">
                    <div class="pull-left">
                      <a href="../laboratorist/profileManagement" class="btn btn-default btn-flat">Profile</a>
                    </div>
                    <div class="pull-right">
                      <a href="../logout" class="btn btn-default btn-flat">Sign out</a>
                    </div>
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        </nav>
      </header>

      <aside class="main-sidebar">
        <section class="sidebar">
          <div class="user-panel">
            <div class="pull-left image">
              <img src="../dist/img/sample prof pic.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
              <p><%=pInfo[0].name%></p>
              <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
          </div>

          <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
              <input type="text" name="q" class="form-control" placeholder="Search...">
                  <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
                    </button>
                  </span>
            </div>
          </form>

          <ul class="sidebar-menu">
            <li class="header">Account Management</li>
            <li class="active"><a href="../laboratorist/dashboard"><i class="fa fa-link"></i> <span>Dashboard</span></a></li>
            <li><a href="../laboratorist/diagnosisRequestManagement.html"><i class="fa fa-link"></i> <span>Diagnosis Request Management</span></a></li>
            <li class="active"><a href="../laboratorist/profileManagement.html"><i class="fa fa-link"></i> <span>Profile Management</span></a></li>
          </ul>
      </aside>

    <br>
    <br>

    <div class="row">
      <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-aqua">
          <div class="inner">
            <h3>23</h3>

            <p>Total Pending Diagnosis Tests</p>
          </div>
          <div class="icon">
            <i class="ion ion-person"></i>
          </div>
          <button type="button"><a href="../laboratorist/diagnosis">more info<i class="fa fa-arrow-circle-right"></i></a>
        </div>
      </div>
      
    <button type="button"><a href="../laboratorist/diagnosis">more info</a></button>Total pending Diagnosis Tests = <%= diagnosisSQL.length%><br>
    <button type="button">more info</button>bloodChemistrySQL = <%= bloodChemistrySQL.length%><br>
    <button type="button">more info</button>hermatology = <%= hermatology.length%><br>
    <button type="button">more info</button>microscopy = <%= microscopy.length%><br>
    <button type="button">more info</button>parasitology = <%= parasitology.length%><br>
    <button type="button">more info</button>serology = <%= serology.length%><br>
    <button type="button">more info</button>microbiology = <%= microbiology.length%><br>
    <button type="button">more info</button>xRay = <%= xRay.length%><br>


    <!-- TODOLIST -->
    <h1>TO DO LIST</h1>
    <button type="button" name="button" onclick="showTodo()">add item</button>
    <br>
    <%for(var i=0; i < todoList.length; i++){%>
        <h3 style="display:inline-block;"><%= todoList[i].description%>:</h3> <h5 style="display:inline-block; font-style:italic;"><%= todoList[i].date%></h5>
        <br>
    <%}%>
    <form method="POST" name="parseDateNTime()">
      <div id="showTodo" style="display:none;">
        <textarea name="description" rows="8" cols="80"></textarea>
        <br>
        <input type="datetime-local" name="dateNtime">
        <button type="submit" name="sub" value="addTodo">save</button>
      </div>
    </form>

    <!-- COUNT MONTHLY -->
    <h1>Patient Count</h1>
    <%if(monthlyPatientCount[0].JAN) {%><h2>january <%= monthlyPatientCount[0].JAN%></h2><%}%>
    <%if(monthlyPatientCount[0].FEB) {%><h2>february <%= monthlyPatientCount[0].FEB%></h2><%}%>
    <%if(monthlyPatientCount[0].MARCH) {%><h2>february <%= monthlyPatientCount[0].MARCH%></h2><%}%>
    <%if(monthlyPatientCount[0].APRIL) {%><h2>february <%= monthlyPatientCount[0].APRIL%></h2><%}%>
    <%if(monthlyPatientCount[0].MAY) {%><h2>february <%= monthlyPatientCount[0].MAY%></h2><%}%>
    <%if(monthlyPatientCount[0].JUNE) {%><h2>february <%= monthlyPatientCount[0].JUNE%></h2><%}%>
    <%if(monthlyPatientCount[0].JULY) {%><h2>february <%= monthlyPatientCount[0].JULY%></h2><%}%>
    <%if(monthlyPatientCount[0].AUGUST) {%><h2>february <%= monthlyPatientCount[0].AUGUST%></h2><%}%>
    <%if(monthlyPatientCount[0].SEPTEMBER) {%><h2>february <%= monthlyPatientCount[0].SEPTEMBER%></h2><%}%>
    <%if(monthlyPatientCount[0].OCTOBER) {%><h2>february <%= monthlyPatientCount[0].OCTOBER%></h2><%}%>
    <%if(monthlyPatientCount[0].NOVEMBER) {%><h2>february <%= monthlyPatientCount[0].NOVEMBER%></h2><%}%>
    <%if(monthlyPatientCount[0].DECEMBER) {%><h2>february <%= monthlyPatientCount[0].DECEMBER%></h2><%}%>
    <br>
    <button type="button"><a href="../logout">LOGOUT</a></button>

  </body>
</html>
<script>
  function showTodo() {
    document.getElementById("showTodo").style.display = "block";
  }
</script>
